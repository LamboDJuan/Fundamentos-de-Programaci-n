using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Desafio_02_04_3
{
    class Program
    {
        static void Main()
        {
            // Entradas para encontrar el valor del triangulo
            Console.Write("Ingrese b en grados: ");
            double bg = double.Parse(Console.ReadLine());
            Console.Write("Ingrese z: ");
            double z = double.Parse(Console.ReadLine());
            Console.Write("Ingrese y: ");
            double y = double.Parse(Console.ReadLine());

            double br = bg * (Math.PI / 180.0);

            double cr = Math.Atan2(z, y);
            double er = Math.PI - cr;
            double dr = Math.PI - er - br;
           
            double sobre = z / Math.Tan(dr);
            double resultado =(sobre - y) ;


            Console.WriteLine("El valor solicitado de b fue: " + bg);
            Console.WriteLine("El valor resultado es: " + resultado);

        }
    }
}
